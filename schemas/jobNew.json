{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/jobNew.schema.json",
    "type": "object",

    "properties": {
      "title": {
        "type": "string",
        "minLength": 1,
        "maxLength": 20
      },
      "salary": {
        "type": "integer",
        "minimum": 1
      },
      "equity": {
        "type": "number",
        "maximum": 1.0
      },
      "companyHandle": {
        "type": "string",
        "maxLength": 30
      }
    },

    "additionalProperties": false,

    "required": [
      "title",
      "salary",
      "equity",
      "companyHandle"
    ]
  }